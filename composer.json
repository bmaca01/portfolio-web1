{
    "name": "web1-site1/blog",
    "description": "Web 1.0 Portfolio Site with Blog",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "phpmailer/phpmailer": "^6.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "fakerphp/faker": "^1.23",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "files": [
            "website/lib/Parsedown.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-unit": "phpunit --testsuite=Unit",
        "test-integration": "phpunit --testsuite=Integration",
        "test-security": "phpunit --testsuite=Security",
        "test-coverage": "XDEBUG_MODE=coverage phpunit --coverage-html coverage/"
    },
    "config": {
        "sort-packages": true
    }
}
